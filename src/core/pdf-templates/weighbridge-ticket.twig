<link href="https://bootswatch.com/4/materia/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

<style type="text/css">
@media print { body { -webkit-print-color-adjust: exact;font-family: 'Roboto', sans-serif; } }

h1, h2, h3, h4,h5 {
  font-family: 'Roboto', sans-serif;
  color: #2ecc71;
}

.mainContainer {
  padding: 2rem;
}
.borderedContainer {
  border: 1px solid black;
  display: flex;
  width: 100%;
  flex-flow: row wrap;
  vertical-align: middle;
}

.borderedText {
  text-align: center;
  width:100%;
}

.centeredContainer {
  width:100%;
  text-align: center;
}

.headerLine {
  color: white;
  text-transform: uppercase;
  width:100%;
  background:#2980b9;
}
</style>

<img style='width:4rem' src='{{ invoiceInfo.companyLogo }}' />

<h1>Weighbridge Ticket</h1>

<div style='line-height: 2; font-size: 2.3rem'>
    <strong>Date: {{ item.date }}</strong><br />
    <strong>Customer: {{ item.customer.name }} </strong><br />
    <strong>Vehicle Reg: {{ item.vehicleReg }}</strong><br />
    <strong>Charges(&pound;): {{ price }} </strong><br />
    <strong>Description: {{ description }}</strong><br />
    <strong>Gross Weight: {{ item.grossWeight }}Kg</strong><br />
    <strong>Tare Weight: {{ item.tareWeight }}Kg</strong><br />
    <strong>Net Weight: {{ item.grossWeight - item.tareWeight }}Kg</strong><br />

</div>