<div class='fullcontainer'>

<h1 class='title'>Workbook for Tippers {{ date }}</h1>
<br />
<br />


{% for round in data %}
<table style='width:100%;'>
    <thead>
        <th></th>
        <th></th>
    </thead>
    <tbody>
    {% for jobItem in round.jobs %}
    {% if jobItem.jobStatusId == 2 %}
        <tr>
            <td>Run {{ jobItem.order.grade.name }}({{ jobItem.order.grade.ewCodes}}) for {{ jobItem.order.account.name }} {{ jobItem.order.site.name }} {{ jobItem.siteAddress }} {{ jobItem.time }} <br /> 
              to {{ jobItem.order.tipSite.name }} {{ jobItem.tipSiteAddress }} <br />
              {{ jobItem.order.description }} - {{ jobItem.order.driverNotes }}
              {{ jobItem.unitText }}
              {{ jobitem.order.contactName }} {{ jobItem.order.contactTelephone }}
            </td>
            <td>{{ round.driver.firstName }} {{ round.driver.lastName }} <br />
              {{ round.vehicle.registration }} <br />
              {{ round.vehicle.make }}/{{ round.vehicle.model }}
            </td>
        </tr>
        {% endif %}
        {% endfor %}
    </tbody>
</table>
<hr />
{% endfor %}

</div>
