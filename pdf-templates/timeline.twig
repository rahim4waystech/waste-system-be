<style type="text/css">
@media print { body { -webkit-print-color-adjust: exact;font-family: 'Roboto', sans-serif; } }

h1, h2, h3, h4,h5 {
  font-family: 'Roboto', sans-serif;
  color: #2ecc71;
}

.mainColumns {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;x
}

.header {

}

.companyLine {
  font-size: 2rem;
  font-weight: bold;
}

.barHeader {
  color: white;
  background-color: #34495e;
  padding: 0.3rem;
}

.invoiceDetailsContainer {
  display: flex;
  flex-flow: row wrap;
}

.invoiceDetailsContainer div {
}

.center {
  text-align: center;
}

table th {
  color: white;
  background-color: #34495e;
  padding: 0.3rem;
  text-align: center;
}

.headerHidden {
  background-color: transparent;
}
table td {
  padding: 1rem;
  text-align: center;
}

tbody tr:nth-child(odd) {
  background-color: #dfe6e9;
}

tbody tr:nth-child(even) {
  background-color: #b2bec3;
}

.fullcontainer {
    padding: 1rem;
}


